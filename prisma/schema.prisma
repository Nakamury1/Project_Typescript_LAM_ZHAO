generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  nom       String
  prenom    String
  email     String  @unique
  password  String
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
} 

model Tache {
  id          Int      @id @default(autoincrement())
  titre       String
  description String
  etat_tache  String
  deadline    DateTime
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
}